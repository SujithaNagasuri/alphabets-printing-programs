import java.util.*;
public class Main
{
	public static void main(String[] args) 
	{
	    
		Scanner scan = new Scanner(System.in);
		System.out.print("Enter rows:");
		int n = scan.nextInt();
		for(int i=0;i<=n;i++)
		{
		    for(int j=0;j<=n;j++)
		    {
		        if(i==j || j == n-i)
		        {
		            System.out.print("*");
		        }
		        else{
		             System.out.print(" ");
		        }
		    }
		    System.out.println();
		}
	}
}
